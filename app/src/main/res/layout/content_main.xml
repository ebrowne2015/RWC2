<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rugby World Cup 2015"
        android:id="@+id/Banner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:background="#bfd774"
        />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Banner"
        android:orientation="horizontal"
        android:id="@+id/Headings"
        android:weightSum="100"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Quarter"
            android:id="@+id/quarters"
            android:background="#FFFFBB33"
            android:layout_weight="25"

            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Semi"
            android:id="@+id/Semi"
            android:background="#FFFFBB33"
            android:layout_weight="25"
            />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Final"
            android:id="@+id/Final"
            android:background="#FFFFBB33"
            android:layout_weight="25"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Winner"
            android:id="@+id/Winner"
            android:background="#FFFFBB33"
            android:layout_weight="25"

            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="qtr1"
        android:id="@+id/qtr1"
        android:layout_below="@+id/Headings"
        android:layout_alignStart="@+id/Headings"
        android:paddingTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="qtr2"
        android:id="@+id/qtr2"
        android:layout_below="@+id/qtr1"
        android:layout_alignStart="@+id/Headings"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="qtr3"
        android:id="@+id/qtr3"
        android:layout_below="@+id/qtr2"
        android:layout_alignStart="@+id/Headings"
        android:paddingTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="qtr4"
        android:id="@+id/qtr4"
        android:layout_below="@+id/qtr3"
        android:layout_alignStart="@+id/Headings"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="qtr5"
        android:id="@+id/qtr5"
        android:layout_below="@+id/qtr4"
        android:layout_alignStart="@+id/Headings"
        android:paddingTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="qtr6"
        android:id="@+id/qtr6"
        android:layout_below="@+id/qtr5"
        android:layout_alignStart="@+id/Headings"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="qtr7"
        android:id="@+id/qtr7"
        android:layout_below="@+id/qtr6"
        android:layout_alignStart="@+id/Headings"
        android:paddingTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="qtr8"
        android:id="@+id/qtr8"
        android:layout_below="@+id/qtr7"
        android:layout_alignStart="@+id/Headings"

        />



    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Semi1"
        android:layout_marginLeft="130dp"
        android:layout_above="@+id/Semi2"
        android:layout_toEndOf="@+id/qtr1" />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Semi2"
        android:layout_alignBottom="@id/qtr4"
        android:layout_toRightOf="@id/qtr4"
        android:layout_marginLeft="130dp"

        />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Semi3"
        android:layout_alignBottom="@id/qtr6"
        android:layout_toRightOf="@id/qtr6"
        android:layout_marginLeft="130dp"

        />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Semi4"
        android:layout_alignBottom="@id/qtr8"
        android:layout_toRightOf="@id/qtr8"
        android:layout_marginLeft="130dp"

        />


    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Final1"
        android:layout_alignBottom="@id/qtr3"
        android:layout_toRightOf="@id/qtr3"
        android:layout_marginLeft="270dp"

        />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Final2"
        android:layout_alignBottom="@id/qtr6"
        android:layout_toRightOf="@id/qtr6"
        android:layout_marginLeft="270dp"

        />


    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Winner1"
        android:layout_above="@id/Final2"
        android:layout_toRightOf="@id/qtr6"
        android:layout_marginLeft="440dp"

        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:text="Lucky Dip"
        android:id="@+id/LuckyDipButton"
        android:layout_below="@+id/qtr8"
        />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="35sp"
        android:text="Reset"
        android:id="@+id/ResetButton"
        android:layout_below="@+id/LuckyDipButton"


        />


</RelativeLayout>
